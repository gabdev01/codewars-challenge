<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/date_synchro"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearlayout_contentloading_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_default_padding"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageview_contentloading_icon"
            android:layout_width="@dimen/widget_content_loading_icon"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/textview_contentloading_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/activity_default_padding"
            android:paddingTop="@dimen/activity_default_padding"
            android:textColor="@color/primary_text_light_normal"
            android:textSize="@dimen/font_size_normal" />

        <Button
            android:id="@+id/button_contentloading_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/widget_content_loading_retry" />

    </LinearLayout>

    <codewars.tuigroup.com.codewars.ui.widget.ContentLoadingProgressBar
        android:id="@+id/progressbar_contentloading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>