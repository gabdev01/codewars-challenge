<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/toolbar_horizontal_spacing"
        android:layout_marginStart="@dimen/toolbar_horizontal_spacing"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_search_24"
        android:tint="@color/search_user_toobar_icon" />

    <EditText
        android:id="@+id/edittext_searchuser_toolbarsearch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="@string/search_user_toolbar_search_hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/primary_text_dark_normal"
        android:textColorHint="@color/secondary_text_dark_normal"
        android:textSize="@dimen/font_size_normal" />

    <ImageView
        android:id="@+id/imageview_usersearch_clearsearch"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/toolbar_horizontal_spacing"
        android:layout_marginStart="@dimen/toolbar_horizontal_spacing"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/search_user_search_clear_search"
        android:src="@drawable/ic_close_24"
        android:tint="@color/search_user_toobar_icon"
        android:visibility="invisible" />

</LinearLayout>
